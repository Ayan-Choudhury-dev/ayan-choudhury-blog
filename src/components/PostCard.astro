---
// Component Imports
import type { CollectionEntry } from "astro:content";
import PostHeader from "./PostHeader.astro";
import TagLinks from "./TagLinks.astro";

type Props = {
  entry: CollectionEntry<"blog">;
};

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<div id="Postcard" class="mb-10 shadow-2xl dark:bg-zinc-800  ">
  <PostHeader entry={entry} />
  <!-- todo:concat the content and add a read more button -->
  <article class="px-4 sm:px-[50px] mb-16">
    <Content />
    <TagLinks post={entry}/>
  </article>
</div>
